<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Paper, please </title>
    <!-- BOOSTRAP-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" >
</head>

<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/index">Paper, please</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="/Admin">Home</a></li>
        <li><a href="/modificar">modificar</a></li>
        <li><a href="/vendidos">vendidos</a></li>
        <li><a href="/ganancias">ganancias</a></li>

      </ul>
      <form class="navbar-form navbar-left" method="GET" action="/buscar/>">
        <div class="input-group">
          <input type="text" class="form-control" id="buscado" placeholder="Search">

          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
</nav>
  <div class='row'>
    <div class='col-md-6 mt-4 text-decoration'>
        <table class='table table-striped'>
            <tr>
                <th>NOMBRE</th>
                <th>AUTOR</th>
                <th>total</th>
            </tr>
            <% for(var i = 0; i < datos.length; i++){ %>
               <tr>
                   <td><%= datos[i].nombre_paper %></td>
                   <td><%= datos[i].autor %></td>
                   <td><%= datos[i].total %></td>
               </tr> 
            <% } %>
        </table>
    </div>
</body>
</html>
