<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <title>Ingreso</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" >
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand" href="/">Inserte nombre generico</a>
              </div>
              <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/admin">Admin</a></li>
              </ul>
              <form class="navbar-form navbar-left" action="/buscar">
                <div class="input-group">
                  <input type="text" class="form-control" id="buscado" placeholder="Search">
                  <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                      <i class="glyphicon glyphicon-search"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
        </nav>
        <!-- <%= datos %>   -->
    
        <div class='row'>
            <div class='col-md-6 mt-4 text-center'>
                <table class='table table-striped'>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th>AUTOR</th>
                        <th>PRECIO</th>
                        <th>FECHA</th>
                    </tr>
                    <% for(var i = 0; i < datos.length; i++){ %>
                       <tr>
                           <td><%= datos[i].id_paper %></td>
                           <td><%= datos[i].nombre_paper %></td>
                           <td><%= datos[i].autor %></td>
                           <td><%= datos[i].precio %></td>
                           <td><%= datos[i].fecha_lan %></td>

                           <td><a href="/eliminar/<%= datos[i].id_paper %>">Eliminar</a></td>
                       </tr> 
                    <% } %>
                </table>
            </div>

            <div class='col-md-4 mt-6 card'>
                <form action="/ingreso" method="post" class="card-body">
                  <h3 class='card-title'>Agregar nuevo paper</h3> 
                    <div class="form-gruop">
                        <label for="fname">Id del paper</label><br>
                        <input type="text" name="id_paper" class="form-control" placeholder="ID">
                    </div>
                    <div class="form-gruop">
                        <label for="fname">Nombre del paper</label><br>
                        <input type="text" name="nombre_paper" class="form-control" placeholder="Nombre"> 
                    </div>
                    <div class="form-gruop">
                        <label for="fname">Autor del paper</label><br>
                        <input type="text" name="autor" class="form-control" placeholder="Autor">
                    </div>
                    <div class="form-gruop">
                        <label for="fname">Precio del paper</label><br>
                        <input type="text" name="precio" class="form-control" placeholder="Precio">
                    </div>
                    <div class="form-gruop">
                        <label for="fname">Fecha de lanzamiento</label><br>
                        <input type="text" name="fecha_lan" class="form-control" placeholder="Fecha">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>    
            </div>
        </div> 
    
    </body>
</html>